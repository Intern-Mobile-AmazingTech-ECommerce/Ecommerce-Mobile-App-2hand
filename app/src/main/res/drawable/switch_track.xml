<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State khi Switch được bật (checked) -->
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#FFFF00" /> <!-- Màu vàng cho track khi checked -->
            <size android:width="7dp" android:height="5dp" />
        </shape>
    </item>
    <!-- State khi Switch không được bật (unchecked) -->
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#FFFF00" /> <!-- Màu vàng cho track khi checked -->
            <size android:width="7dp" android:height="5dp" />
        </shape>
    </item>
</selector>
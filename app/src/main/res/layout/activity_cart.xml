<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.Cart.Cart">

    <ImageButton
        android:id="@+id/btnBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="63dp"
        app:srcCompat="@drawable/arrowleft2"
        android:background="@drawable/frame_17" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/gabarito"
        android:text="Cart"
        android:textFontWeight="700"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="24dp"
        android:layout_marginTop="127dp"
        android:fontFamily="@font/circularstdmedium500"
        android:text="Remove All"
        android:textFontWeight="450"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/lv_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="163dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="350dp"
        android:dividerHeight="8dp"
        android:divider="@android:color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="227dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularstdmedium500"
                android:text="Subtotal"
                android:textColor="@color/Black_50"
                android:textFontWeight="450"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/circularstdmedium500"
                android:gravity="right"
                android:text="$200"
                android:textColor="#272727"
                android:textFontWeight="450"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularstdmedium500"
                android:text="Shipping Cost"
                android:textColor="@color/Black_50"
                android:textFontWeight="450"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/circularstdmedium500"
                android:gravity="right"
                android:text="$8.00"
                android:textColor="#272727"
                android:textFontWeight="450"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularstdmedium500"
                android:text="Tax"
                android:textColor="@color/Black_50"
                android:textFontWeight="450"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/te"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/circularstdmedium500"
                android:gravity="right"
                android:text="$0.00"
                android:textColor="#272727"
                android:textFontWeight="450"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularstdmedium500"
                android:text="Total"
                android:textColor="@color/Black_50"
                android:textFontWeight="450"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/circularstdmedium500"
                android:gravity="right"
                android:text="$208"
                android:textColor="#272727"
                android:textFontWeight="450"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="140dp"
        android:layout_gravity="bottom"
        android:background="@drawable/framelayout">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/iconsax" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/circularstdmedium500"
            android:text="Enter Coupon Code"
            android:textColor="@color/Black_50" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button"
            app:srcCompat="@drawable/arrowright2_white" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_Checkout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="14dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/purple"
        android:text="Checkout" />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    style="@style/ordercard_tablelayout"
    android:paddingHorizontal="12dp"
    android:padding="25dp"
    >


    <TextView
        style="@style/TEXT"
        android:id="@+id/textViewAddress"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/circularstdmedium500"
        android:textFontWeight="700"
        android:textSize="16dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />


    <RadioButton
        style="@style/TEXT"
        android:id="@+id/rdbtnChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstdmedium500"
        android:textFontWeight="700"
        android:layout_toLeftOf="@id/textViewEdit"
        android:layout_marginRight="20dp"
        android:text="Active" />

    <TextView
        android:id="@+id/textViewEdit"
        style="@style/icon_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gabarito"
        android:text="Edit"
        android:textColor="@color/purple"
        android:textFontWeight="700"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Settings.SettingsFragment">

    <ImageView
        android:id="@+id/ellipse_14"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/google"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/frame_51"
        android:clipToOutline="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User name"
                android:textAppearance="@style/user_name" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Email"
                android:textAppearance="@style/user_email" />
        </LinearLayout>

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="Edit"
            android:textAppearance="@style/edit" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/options_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="29dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_59"
            android:drawableEnd="@drawable/arrowright2"
            android:gravity="start|center_vertical"
            android:text="Address"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/Black_100"
            style="@style/font_circular_bold"/>

        <TextView
            android:id="@+id/Wishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_59"
            android:drawableEnd="@drawable/arrowright2"
            android:gravity="start|center_vertical"
            android:text="Wishlist"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/Black_100"
            style="@style/font_circular_bold"/>

        <TextView
            android:id="@+id/Payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_59"
            android:drawableEnd="@drawable/arrowright2"
            android:gravity="start|center_vertical"
            android:text="Payment"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/Black_100"
            style="@style/font_circular_bold"/>

        <TextView
            android:id="@+id/Help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_59"
            android:drawableEnd="@drawable/arrowright2"
            android:gravity="start|center_vertical"
            android:text="Help"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/Black_100"
            style="@style/font_circular_bold"/>

        <TextView
            android:id="@+id/Support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_59"
            android:drawableEnd="@drawable/arrowright2"
            android:gravity="start|center_vertical"
            android:text="Support"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/Black_100"
            style="@style/font_circular_bold"/>

        <TextView
            android:id="@+id/tvSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="40dp"
            android:text="Sign Out"
            android:textAppearance="@style/sign_out"
            android:gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>

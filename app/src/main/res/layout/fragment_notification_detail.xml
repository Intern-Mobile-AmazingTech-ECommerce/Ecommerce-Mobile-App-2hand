<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Notifications.NotificationDetailFragment"
    style="@style/SCREEN"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150px"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_background"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"


            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:padding="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="37dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"

                android:src="@drawable/notificationbing_red" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textSize="12dp"
                android:fontFamily="@font/circularstdmedium500"

                android:text="Gilbert, you placed and order check your order history for full details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_background"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"


            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:padding="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="37dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"

                android:src="@drawable/notificationbing" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:textSize="12dp"
                android:fontFamily="@font/circularstdmedium500"

                android:text="Gilbert, Thank you for shopping with us we have canceled order #24568." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_background"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"


            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:padding="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="37dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"

                android:src="@drawable/notificationbing" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularstdmedium500"

                android:paddingStart="12dp"

                android:text="Gilbert, your Order #24568 has been confirmed check your order history for full details" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
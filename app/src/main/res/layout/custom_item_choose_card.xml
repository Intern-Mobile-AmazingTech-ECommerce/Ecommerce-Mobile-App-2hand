<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    style="@style/ordercard_tablelayout"
    android:paddingHorizontal="12dp"
    android:padding="25dp"
    >


    <TextView
        style="@style/TEXT"
        android:id="@+id/tvCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:fontFamily="@font/circularstdmedium500"
        android:textFontWeight="450"
        android:textSize="16dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/imgCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvCardNumber"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        app:srcCompat="@drawable/payment" />

    <RadioButton
        style="@style/TEXT"
        android:id="@+id/rdbtnChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstdmedium500"
        android:textFontWeight="700"
        android:layout_toLeftOf="@id/imageView7"
        android:layout_marginRight="20dp"
        android:text="Inactive" />

    <ImageView
        android:id="@+id/imageView7"
        style="@style/icon_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
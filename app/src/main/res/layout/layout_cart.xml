<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    style="@style/cart_enter_coupon"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="5">

    <androidx.cardview.widget.CardView
        style="@style/bg_product_card"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.2"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_NameCart"
                style="@style/cart_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lineHeight="19dp"
                android:maxLines="2"
                android:text="Men's Harrington Jacket"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_PriceCart"
                style="@style/cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:text="$148"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_SizeCart"
                style="@style/cart_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="" />

            <TextView
                android:id="@+id/txt_ColorCart"
                style="@style/cart_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="" />

            <ImageButton
                android:id="@+id/imageButtonAdd"
                style="@style/cart_btn_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/txt_Quantity"
                style="@style/cart_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="14dp"></TextView>

            <ImageButton
                android:id="@+id/imageButtonMinus"
                style="@style/cart_btn_minus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
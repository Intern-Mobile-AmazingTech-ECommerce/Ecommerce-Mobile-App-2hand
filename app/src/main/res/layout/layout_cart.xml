<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/framelayout">

    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ao1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="700"
                android:fontFamily="@font/circularstdmedium500"
                android:lineHeight="160dp"
                android:text="TextView"
                android:textFontWeight="450"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gabarito"
                android:gravity="right"
                android:lineHeight="160dp"
                android:text="TextView"
                android:layout_marginRight="8dp"
                android:textFontWeight="700"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/size_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularstdmedium500"
                android:lineHeight="160dp"
                android:text="TextView"
                android:textFontWeight="450"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/color_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/circularstdmedium500"
                android:lineHeight="160dp"
                android:text="TextView"
                android:textFontWeight="450"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/button"
                app:srcCompat="@drawable/add"
                android:layout_marginRight="8dp"/>
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/button"
                app:srcCompat="@drawable/minus"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
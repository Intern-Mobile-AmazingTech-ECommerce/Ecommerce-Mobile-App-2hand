<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    style="@style/cart_enter_coupon">

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="center"
        android:id="@+id/imgCart"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ao1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:lineHeight="19dp"
                android:id="@+id/txt_NameCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Men's Harrington Jacket"
                style="@style/cart_item_detail"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/txt_PriceCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="$148"
                style="@style/cart_item_price"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_SizeCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Size - "
                style="@style/cart_item_detail"/>

            <TextView
                android:id="@+id/txt_ColorCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Color - "
                style="@style/cart_item_detail"/>

            <ImageButton
                android:id="@+id/imageButtonAdd"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentEnd="true"
                style="@style/cart_btn_add"/>

            <TextView
                android:id="@+id/txt_Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/cart_item_detail"
                android:text="1"
                >
            </TextView>
s
            <ImageButton
                android:id="@+id/imageButtonMinus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                style="@style/cart_btn_minus"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
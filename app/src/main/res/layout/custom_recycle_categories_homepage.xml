<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="17dp">
    <ImageButton
        android:id="@+id/imageViewCategoryIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cornerRadius="56dp"
        android:src="@drawable/hoodies"
        android:background="@drawable/shape2"
        android:scaleType="fitCenter"

        />

    <TextView
        android:id="@+id/textViewCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewCategoryIcon"
        android:layout_centerInParent="true"
        android:fontFamily="@font/circularstdmedium500"
        android:lineHeight="19.2dp"
        android:text="Hoodies"
        android:textFontWeight="450"
        android:textSize="12dp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
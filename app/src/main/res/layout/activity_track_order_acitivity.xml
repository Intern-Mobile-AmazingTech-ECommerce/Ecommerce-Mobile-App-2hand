<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/SCREEN"
    tools:context=".Views.Orders.TrackOrderAcitivity">

    <RelativeLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="24dp"
        >

        <ImageView

            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            style="@style/BUTTON_BACK"
            />

        <TextView
            android:id="@+id/tv_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Order "
            style="@style/TEXT"
            android:fontFamily="@font/gabarito"
            android:textFontWeight="700"
            android:textSize="16dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Items"
        style="@style/TEXT"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/gabarito"
        android:textFontWeight="700"
        android:layout_marginHorizontal="24dp"
        android:textSize="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="12dp"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="24dp">

        <TableLayout
            style="@style/ordercard_tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:weightSum="10">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/img_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/tv_amount_order"
                    style="@style/TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/circularstdmedium500"
                    android:text="TextView"
                    android:textSize="16dp"
                    android:layout_weight="6"/>

                <TextView
                    android:id="@+id/tv_viewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gabarito"
                    android:textColor="@color/purple"
                    android:textFontWeight="700"
                    android:text="View All"
                    android:textSize="12dp"
                    android:layout_weight="0"
                    />

            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="14dp"
        android:text="Shipping details"
        style="@style/TEXT"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/gabarito"
        android:textFontWeight="700"
        android:textSize="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="12dp"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="11dp"
            style="@style/ordercard_tablelayout">

            <TextView
                android:id="@+id/tv_shippingdetails"
                style="@style/TEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularstdmedium500"
                android:lineHeight="19sp"
                android:lineSpacingExtra="4sp"
                android:text="hehe"
                android:textSize="12dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
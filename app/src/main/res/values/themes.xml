<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcommerceMobileApp2Hand" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EcommerceMobileApp2Hand" parent="Base.Theme.EcommerceMobileApp2Hand" />
    <!-- Lightmode -->
    <style name="SCREEN">
        <item name="android:background">#ffffff</item>

    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/Black_100</item>
    </style>
    <style name="BUTTON_BACK">
        <item name="android:backgroundTint">#f4f4f4</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:src">@drawable/arrowleft2</item>
    </style>
    <style name="sign_in">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gabarito</item>
    </style>
    <style name="dont_have_a">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#272727</item>
    </style>
    <style name="color_category">
        <item name="android:backgroundTint">#f4f4f4</item>
    </style>
    <style name="button_signin">
        <item name="android:backgroundTint">#f4f4f4</item>
        <item name="android:textColor">#272727</item>
        <item name="iconTint">@color/Black_100</item>

    </style>
    <style name="editText">
        <item name="android:background">#f4f4f4</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>


    </style>
    <style name="editText_bold">
        <item name="android:backgroundTint">#f4f4f4</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>

        <item name="android:textStyle">bold</item>
    </style>

    <style name="hint">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#80272727</item>
        <item name="android:backgroundTint">#f4f4f4</item>

    </style>
    <style name="bottom_nav" >
        <item name="android:background">#ffffff</item>
        <item name="itemIconTint">@drawable/bottom_nav_light_mode</item>

    </style>
    <style name="search_bar">
        <item name="iconTint">@color/Black_100</item>
        <item name="android:textColor">@color/Black_100</item>
        <item name="android:backgroundTint">@color/Bg_Light_2</item>
    </style>
    <style name="text_sale_price">
        <item name="android:textColor">@color/Black_50</item>
    </style>
    <style name="bg_product_card">
        <item name="android:backgroundTint">@color/Bg_Light_2</item>
    </style>
    <style name="icon_favorite">
        <item name="iconTint">@color/Black_100</item>
        <item name="android:backgroundTint">#f2f2f3</item>
    </style>
    <style name="background_tint_mode">
        <item name="android:backgroundTint">@color/Black_100</item>
    </style>

<!--    Settings UI-->
    <style name="user_info">
        <item name="android:background">@drawable/frame_51</item>
    </style>
    <style name="setting_items_label">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#272727</item>
        <item name="fontFamily">@font/gabarito</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="user_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gabarito</item>
    </style>

    <style name="user_email">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8C8C8C</item>
        <item name="fontFamily">@font/circularstdmedium500</item>
    </style>

    <style name="user_phonenumber">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8C8C8C</item>
        <item name="fontFamily">@font/circularstdmedium500</item>
    </style>

    <style name="setting_items">
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/frame_59</item>
        <item name="android:drawableEnd">@drawable/arrowright2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="fontFamily">@font/circularstdmedium500</item>
    </style>
    <style name="address_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/circularstdmedium500</item>
    </style>
    <style name="address_param_box">
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:background">@drawable/frame_52</item>
        <item name="android:paddingStart">12dp</item>
    </style>
</resources>
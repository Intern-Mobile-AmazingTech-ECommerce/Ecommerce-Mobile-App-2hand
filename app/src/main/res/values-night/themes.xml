<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcommerceMobileApp2Hand" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <!-- Darkmode -->
    <style name="SCREEN">
        <item name="android:background">#1d182a</item>

    </style>
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BUTTON_BACK">
        <item name="android:backgroundTint">#342f3f</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:src">@drawable/arrowleft_white</item>

    </style>
    <style name="sign_in">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gabarito</item>
    </style>
    <style name="dont_have_a">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="color_category">
        <item name="android:backgroundTint">#342f3f</item>
    </style>
    <style name="button_signin">
        <item name="android:backgroundTint">#342f3f</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="editText">
        <item name="android:background">#342f3f</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>

        <item name="android:textStyle">bold</item>
    </style>

    <style name="hint">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#80272727</item>
        <item name="android:backgroundTint">#342f3f</item>
    </style>
    <style name="bottom_nav" >
        <item name="android:background">#1d182a</item>
        <item name="itemIconTint">@drawable/bottom_nav_dark_mode</item>

    </style>
    <style name="search_bar">
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/Bg_Dark_2</item>
        <item name="searchIcon">@drawable/searchnormal1_white</item>
        <item name="android:closeIcon">@drawable/x_white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="text_sale_price">
        <item name="android:textColor">@color/white_50</item>
    </style>
    <style name="bg_product_card">
        <item name="android:backgroundTint">@color/Bg_Dark_2</item>
    </style>
    <style name="icon_favorite">
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">#00000000</item>
    </style>
    <style name="background_tint_mode">
        <item name="android:backgroundTint">@color/Bg_Light_2</item>
    </style>
    <!--    Cart UI-->
    <style name="empty_cart_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/circularstdmedium500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="cart_label">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/gabarito</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="cart_remove_all">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/circularstdmedium500</item>
        <item name="android:fontWeight">450</item>
    </style>
    <style name="cart_fee">
        <item name="android:gravity">right</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/circularstdmedium500</item>
        <item name="android:fontWeight">450</item>
    </style>
    <style name="cart_item_detail">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/circularstdmedium500</item>
        <item name="android:fontWeight">450</item>
    </style>
    <style name="cart_item_price">
        <item name="android:fontFamily">@font/gabarito</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="cart_btn_add">
        <item name="android:background">@drawable/button</item>
        <item name="android:src">@drawable/add_dark</item>
    </style>
    <style name="cart_btn_minus">
        <item name="android:background">@drawable/button</item>
        <item name="android:src">@drawable/minus_dark</item>
    </style>
    <style name="cart_enter_coupon">
        <item name="android:background">@drawable/framelayout_dark</item>
    </style>
    <!--    Settings UI-->
    <style name="user_info">
        <item name="android:background">@drawable/frame_51_dark</item>
    </style>
    <style name="setting_items_label">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/gabarito</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="user_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gabarito</item>
    </style>

    <style name="user_email">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8C8C8C</item>
        <item name="fontFamily">@font/circularstdmedium500</item>
    </style>

    <style name="user_phonenumber">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8C8C8C</item>
        <item name="fontFamily">@font/circularstdmedium500</item>
    </style>

    <style name="setting_items">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/frame_59_dark</item>
        <item name="android:drawableEnd">@drawable/arrowright2_white</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="fontFamily">@font/circularstdmedium500</item>
    </style>
    <style name="address_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/circularstdmedium500</item>
    </style>
    <style name="address_param_box">
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:background">@drawable/frame_52_dark</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="icon_hearth">
        <item name="android:src">@drawable/white_heart</item>
    </style>

    <style name="icon_arrow_right">
        <item name="android:src">@drawable/arrowright_white</item>
    </style>
    <style name="item_wishlist">
        <item name="android:src">@drawable/rounded_corners_dark</item>
    </style>

    <!--    Orders UI-->
    <style name="chip_items">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:checkable">true</item>
        <item name="chipBackgroundColor">#342f3f</item>
        <item name="android:fontFamily">@font/circularstdmedium500</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="ordercard_tablelayout">
        <item name="android:background">#342F3F</item>
    </style>

    <style name="img_start">
        <item name="android:background">@drawable/receipt1_white</item>
    </style>

    <style name="ordercard_tvamount">
        <item name="android:textColor">@color/white_50</item>
    </style>

    <style name="img_end">
        <item name="android:background">@drawable/arrowright2_white</item>
    </style>

    <!---Custom Variable-->
    <style name="btn_favorite">
        <item name="android:background">@drawable/circle</item>
        <item name="android:backgroundTint">@color/Bg_Dark_2</item>
        <item name="android:src">@drawable/white_heart</item>
    </style>
    <style name="caret_down">
        <item name="android:src">@drawable/arrowdown_white</item>
    </style>
    <style name="img_Notification">
        <item name="android:background">@drawable/notificationdark</item>
    </style>
    <style name="img_Notification_red">
        <item name="android:background">@drawable/notificationbingreddark</item>
    </style>
    <style name="icon_notification_backgound">
        <item name="android:background">@drawable/rounded_corners_background_dark</item>
    </style>
    <style name="btn_close">
        <item name="android:src">@drawable/baseline_close_24_white</item>
    </style>
</resources>
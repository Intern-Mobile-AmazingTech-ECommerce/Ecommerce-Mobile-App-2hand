<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcommerceMobileApp2Hand" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <!-- Darkmode -->
    <style name="SCREEN">
        <item name="android:background">#1d182a</item>

    </style>
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BUTTON_BACK">
        <item name="android:backgroundTint">#342f3f</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:src">@drawable/arrowleft_white</item>

    </style>
    <style name="sign_in">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gabarito</item>
    </style>
    <style name="dont_have_a">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="color_category">
        <item name="android:backgroundTint">#342f3f</item>
    </style>
    <style name="button_signin">
        <item name="android:backgroundTint">#342f3f</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="editText">
        <item name="android:backgroundTint">#342f3f</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>

        <item name="android:textStyle">bold</item>
    </style>

    <style name="hint">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#80272727</item>
        <item name="android:backgroundTint">#342f3f</item>
    </style>
</resources>